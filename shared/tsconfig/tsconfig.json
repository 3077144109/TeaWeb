/* general shared project config */
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "plugins": [ /* ttypescript */
      {
        "transform": "../../build/trgen/ttsc_transformer.js",
        "type": "program",
        "target_file": "../generated/i18n.translation",
        "verbose": true
      }
    ]
  },
  "exclude": [
    "../js/workers"
  ],
  "include": [
    "../declarations/imports_*.d.ts",
    "../js/**/*.ts"
  ]
}